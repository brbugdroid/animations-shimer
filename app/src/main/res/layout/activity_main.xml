<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Este ponto é onde vc monta o esqueleto do Shimmer, use o mesmo layout
     que será exibido dentro do ShimmerFrameLayout-->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/items_shimmer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_stop_animation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="gone">

            <include layout="@layout/animal_view_holder" />

            <include layout="@layout/animal_view_holder" />

            <include layout="@layout/animal_view_holder" />

            <include layout="@layout/animal_view_holder" />

            <include layout="@layout/animal_view_holder" />

            <include layout="@layout/animal_view_holder" />

            <include layout="@layout/animal_view_holder" />

            <include layout="@layout/animal_view_holder" />

            <include layout="@layout/animal_view_holder" />

            <include layout="@layout/animal_view_holder" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <TextView
        android:id="@+id/start_stop_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Clique para fazer a animação"
        android:textAlignment="center"
        android:textSize="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itens_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_stop_animation"
        tools:listitem="@layout/animal_view_holder"
        tools:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>